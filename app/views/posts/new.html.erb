<div class='col-md-8 col-sm-8 col-sm-offset-2 col-md-offset-2'>
   <h1>New Post</h1>

   <form action="<%= sub_posts_url %>" method="post">
     <input type="hidden"
            name="authenticity_token"
            value="<%= form_authenticity_token %>" >
    <div class="form-group">
       <label>Title</label>
        <input type="text" class='form-control'
               name="post[title]" value="<%= @post.title %>">
    </div>
    <div class="form-group">
       <label>Link</label>
       <input type="text" class='form-control' name="post[url]" value="http://">
    </div>

   <div class="row">
      <%= render "all_sub" %>
   </div>
      <div class="form-group">
         <label>Content</label>
         <textarea class='form-control' name="post[content]"
           rows="6"><%= @post.content %></textarea>
        </div>
     <input type="submit" class='btn btn-success'>
     <%= link_to "Back", sub_url(params[:sub_id]), class: 'btn btn-info' %>
   </form>
</div>
