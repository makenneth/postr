<h1>New Post</h1>

<form action="<%= sub_posts_url %>" method="post">
  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>" >

  <label>Title
    <input type="text" name="post[title]" value="<%= @post.title %>">
  </label>
  <label>Link
    <input type="text" name="post[url]" value="http://">
  </label>
  <% Sub.all.each do |sub| %>
    <label>
      <%= sub.title %>
      <input type="checkbox" name="post[sub_ids][]" value="<%= sub.id %>">
    </label>
  <% end %>
  <br>
  <br>
  <textarea name="post[content]"
        rows="16" cols="80"><%= @post.content %></textarea>
  <input type="submit">
</form>
