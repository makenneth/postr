<dl>
   <dt style='font-size: 24px'><%= @sub.title %>
   <span style='float: right; font-size: 16px'><%= link_to "Edit the sub", edit_sub_url(@sub) %></span></dt>
   <dd style='margin-left: 5px; border: 1px solid; padding: 20px; border-radius: 3px'><%= @sub.description %></dd>
</dl>
<ul class='post-list'>
  <% @sub.posts.each do |post| %>
  <li><% unless post.url == "" %>
      <a href="<%= post.url %>"><%= post.title %></a>
      <!-- also put in the domain if there is a link -->
    <% else %>
      <%= link_to post.title, post_url(post) %>
    <% end %>
  </li>
  <p style='font-size: 14px; margin-left: 5px;'>submitted <%= time_ago_in_words(post.created_at) %> ago by <%= post.author.username %></p>
  <p style='font-size: 12px; margin-left: 5px;'><%= post.comments.count %> Comments</p>
  <% end %>
</ul>
<br>

<%= link_to "Make a post", new_sub_post_url(@sub) %>
